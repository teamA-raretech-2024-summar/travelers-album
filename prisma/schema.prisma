generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id String @id
    name String
    email String
    password String
    icon String
    birthday DateTime
  }

  model FellowTraveler {
    id Int @id @default(autoincrement())
    user_id String
    fellow_id String
  }
  
  model TripboardUser {
    id Int @id @default(autoincrement())
    user_id String
    board_id String
  }
  
  model TripBoard {
    id String @id
    title String
    start_at DateTime
    end_at DateTime
    thumbnail String
    owner_id String
    last_update DateTime
  }
  
  model TripCard {
    id String @id
    board_id String
    memo String
    thumbnail_id Int
  }
  
  model CardPicture {
    id String @id
    card_id String
    picture String
    photo_date DateTime
  }
